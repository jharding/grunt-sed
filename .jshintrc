{
  // enforcing options
  "curly": true,
  "forin": true,
  "indent": 2,
  "maxlen": 80,
  "newcap": true,
  "noarg": true,
  "noempty": true,
  "nonew": true,
  "quotmark": true,
  "undef": true,
  "unused": true,

  // relaxing options
  "boss": true,
  "expr": true,
  "laxcomma": true,

  // environments
  "node": true,
  "esversion": 6
}
